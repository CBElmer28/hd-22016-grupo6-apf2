{
  "root": true,
  "extends": ["react-app", "react-app/jest", "plugin:prettier/recommended"],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 100,
        "tabWidth": 2,
        "semi": true,
        "bracketSpacing": true
      }
    ],
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-empty-function": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
